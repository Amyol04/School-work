public class SwitchDemo {
  public static void main(String[] args) [

    int age = 15;

    switch(age) { 

        Case 1: System.out.println("Walking");
         break;
       
         Case 2: System.out.println("Talking");
         break;

         Case 4: System.out.println("Go To School");
         break;

         Case 18: System.out.println("Go To Collge");
         break;

         Case 22; System.out.println("Get A Job");
         break;

         default;
            System.out.println("Youre not 1,2,4,18 or 22!");

    } // end of switch xx more readable way of doing switch statements. Theyre like if / else statements. 

    String results; 

    results = age >= 18? "You can vote Yipee!" : "You are too young to vote >:(";

    System.out.println("results");

    results = age == 1? "Walking": Age == 2? "Talking": age == 4? "Go To School!": age == 18? "Go to college":
    age == 22? "get a job x" : "Youre not 1,2,4,18 or 22!"; 
    System.out.println(results): 

    // dont. this is unreadable.. possible but pls for the sake of your mental wellbeing, dont. 

  ] // end of main
} // end of class
